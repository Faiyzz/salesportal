generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id                 String    @id @default(cuid())
  email              String    @unique
  name               String?
  password           String
  role               UserRole  @default(SALES_PERSON)
  calendlyToken      String?
  calendlyUri        String?
  isActive           Boolean   @default(true)
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  createdById        String?
  accounts           Account[]
  sessions           Session[]
  leads              Lead[]
  meetings           Meeting[]
  createdBy          User?     @relation("AdminToSalesPerson", fields: [createdById], references: [id])
  createdSalesPeople User[]    @relation("AdminToSalesPerson")
  
  // Commission relations
  commissions         Commission[]      @relation("UserCommissions")
  commissionsCreated  Commission[]      @relation("CommissionsCreated")
  commissionHistoryChanges CommissionHistory[] @relation("CommissionHistoryChanges")
  commissionSlabs     CommissionSlab[]

  @@map("users")
}

model Meeting {
  id               String        @id @default(cuid())
  calendlyEventId  String        @unique
  name             String
  status           MeetingStatus @default(SCHEDULED)
  startTime        DateTime
  endTime          DateTime
  duration         Int
  location         String?
  description      String?
  attendeeName     String
  attendeeEmail    String
  attendeePhone    String?
  attendeeTimezone String?
  calendlyUri      String
  eventType        String?
  inviteeUri       String?
  isRescheduled    Boolean       @default(false)
  rescheduleCount  Int           @default(0)
  cancelReason     String?
  salesPersonId    String
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  lead             Lead?
  salesPerson      User          @relation(fields: [salesPersonId], references: [id])

  @@map("meetings")
}

model LeadSource {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  leads       Lead[]

  @@map("lead_sources")
}

model LeadStatus {
  id          String   @id @default(cuid())
  name        String   @unique
  color       String   @default("#6B7280")
  description String?
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  leads       Lead[]

  @@map("lead_statuses")
}

model LeadColumn {
  id          String            @id @default(cuid())
  name        String
  key         String            @unique
  type        ColumnType
  isRequired  Boolean           @default(false)
  isActive    Boolean           @default(true)
  sortOrder   Int               @default(0)
  description String?
  options     Json?
  minLength   Int?
  maxLength   Int?
  minValue    Decimal?          @db.Decimal(15, 2)
  maxValue    Decimal?          @db.Decimal(15, 2)
  pattern     String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  leadValues  LeadColumnValue[]

  @@map("lead_columns")
}

model LeadColumnValue {
  id        String     @id @default(cuid())
  leadId    String
  columnId  String
  value     Json?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  column    LeadColumn @relation(fields: [columnId], references: [id], onDelete: Cascade)
  lead      Lead       @relation(fields: [leadId], references: [id], onDelete: Cascade)

  @@unique([leadId, columnId])
  @@map("lead_column_values")
}

model Lead {
  id                String            @id @default(cuid())
  name              String
  email             String
  phone             String?
  company           String?
  jobTitle          String?
  statusId          String?
  sourceId          String?
  meetingWentWell   Boolean?
  nextSteps         String?
  followUpDate      DateTime?
  notes             String?
  leadScore         Int?              @default(0)
  priority          String?           @default("MEDIUM")
  estimatedValue    Decimal?          @db.Decimal(10, 2)
  probability       Int?
  expectedCloseDate DateTime?
  meetingId         String?           @unique
  salesPersonId     String
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  columnValues      LeadColumnValue[]
  meeting           Meeting?          @relation(fields: [meetingId], references: [id])
  salesPerson       User              @relation(fields: [salesPersonId], references: [id])
  source            LeadSource?       @relation(fields: [sourceId], references: [id])
  status            LeadStatus?       @relation(fields: [statusId], references: [id])
  commission        Commission?

  @@map("leads")
}

model CommissionSlab {
  id          String  @id @default(cuid())
  userId      String  // Sales person or manager this slab belongs to
  minAmount   Decimal @db.Decimal(10, 2) // Minimum deal value for this slab
  maxAmount   Decimal? @db.Decimal(10, 2) // Maximum deal value (null for unlimited)
  rate        Decimal @db.Decimal(5, 2) // Commission percentage for this slab
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("commission_slabs")
}

model Commission {
  id               String   @id @default(cuid())
  leadId           String   @unique
  userId           String   // Sales person or manager who gets the commission
  commissionAmount Decimal  @db.Decimal(10, 2)
  appliedRate      Decimal  @db.Decimal(5, 2) // Rate that was applied based on slab
  slabId           String?  // Which slab was used for calculation
  notes            String?  // Optional notes about the commission
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  createdById      String   // Admin who set the commission

  // Relations
  lead      Lead @relation(fields: [leadId], references: [id], onDelete: Cascade)
  user      User @relation("UserCommissions", fields: [userId], references: [id])
  createdBy User @relation("CommissionsCreated", fields: [createdById], references: [id])
  history   CommissionHistory[] 

  @@map("commissions")
}

model CommissionHistory {
  id                  String   @id @default(cuid())
  commissionId        String
  previousAmount      Decimal? @db.Decimal(10, 2)
  newAmount           Decimal  @db.Decimal(10, 2)
  previousRate        Decimal? @db.Decimal(5, 2)
  newRate             Decimal? @db.Decimal(5, 2)
  changeReason        String?  // Why the commission was changed
  changedAt           DateTime @default(now())
  changedById         String   // Admin who made the change

  // Relations
  commission Commission @relation(fields: [commissionId], references: [id], onDelete: Cascade)
  changedBy  User       @relation("CommissionHistoryChanges", fields: [changedById], references: [id])

  @@map("commission_history")
}

enum UserRole {
  ADMIN
  SALES_PERSON
  SALES_MANAGER
}

enum ColumnType {
  TEXT
  NUMBER
  DATE
  BOOLEAN
  SELECT
  MULTI_SELECT
  FILE
  URL
  EMAIL
  PHONE
}

enum MeetingStatus {
  SCHEDULED
  COMPLETED
  NO_SHOW
  PASSED
}
